{
  "name": "cs2-skin-portfolio-analyzer",
  "version": "1.0.0",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "backend:dev": "nodemon src/server.js",
    "backend:start": "node src/server.js",
    "test": "node --test tests/*.test.js",
    "security:gitleaks": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/run-gitleaks.ps1",
    "security:gitleaks:staged": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/run-gitleaks.ps1 -Staged",
    "security:gitleaks:dir": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/run-gitleaks.ps1 -Mode dir",
    "hooks:enable": "git config core.hooksPath .githooks",
    "worker:prices": "node src/workers/priceUpdaterWorker.js",
    "worker:alerts": "node src/workers/alertCheckerWorker.js",
    "frontend:dev": "npm --prefix frontend run dev",
    "frontend:build": "npm --prefix frontend run build",
    "frontend:preview": "npm --prefix frontend run preview",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "build": "npm run frontend:build",
    "start": "node src/server.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.9"
  }
}
